<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        mc:Ignorable="d"
        Title="OwO Craft Launcher " Width="800" Height="600">
    <Grid Background="#FF46AC28">
        <StackPanel Margin="0,0,628,0" Background="#FFA8C770">
            <Button Content="Login" Name="LoginButton" Click="LoginButton_Click"/>
            <Button Content="Update" Name="UpdateButton" Click="UpdateButton_Click"/>
            <Button Content="Play" Name="PlayButton" Click="PlayButton_Click"/>
        </StackPanel>
        <StackPanel Margin="164,542,0,0">
            <ProgressBar x:Name="MainProgressBar" Height="25" Width="400" BorderBrush="Brown" Margin="196,0" Foreground="#FF00B9FF" RenderTransformOrigin="0.492,-0.32"/>
        </StackPanel>
        <ListView HorizontalAlignment="Left" Height="249" Margin="169,288,0,0" VerticalAlignment="Top" Width="613" Name="LogList">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
